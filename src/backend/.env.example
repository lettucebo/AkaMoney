# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_API_TOKEN=your_api_token

# JWT Secret (use wrangler secret put JWT_SECRET)
JWT_SECRET=your_jwt_secret_key_change_this

# Entra ID Configuration
ENTRA_ID_TENANT_ID=your_tenant_id
ENTRA_ID_CLIENT_ID=your_client_id
ENTRA_ID_CLIENT_SECRET=your_client_secret

# Database
DATABASE_ID=your_d1_database_id

# Storage Configuration
# Storage provider: 'r2' (default) or 'azure'
STORAGE_PROVIDER=r2

# Cloudflare R2 Configuration (used when STORAGE_PROVIDER=r2)
R2_BUCKET_NAME=akamoney-storage
R2_PUBLIC_URL=https://storage.aka.money

# Azure Storage Configuration (used when STORAGE_PROVIDER=azure)
# AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name
# AZURE_STORAGE_ACCOUNT_KEY=your_storage_account_key
# AZURE_STORAGE_CONTAINER_NAME=akamoney-storage
# AZURE_STORAGE_ENDPOINT_URL=https://your_account.blob.core.windows.net (optional, for custom endpoints)
