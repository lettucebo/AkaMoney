# Cloudflare Configuration for D1 Analytics (optional)
D1_ANALYTICS_ACCOUNT_ID=your_account_id
D1_ANALYTICS_API_TOKEN=your_api_token
D1_ANALYTICS_DATABASE_ID=your_d1_database_id

# JWT Secret (use wrangler secret put JWT_SECRET)
JWT_SECRET=your_jwt_secret_key_change_this

# Entra ID Configuration
ENTRA_ID_TENANT_ID=your_tenant_id
ENTRA_ID_CLIENT_ID=your_client_id
# Entra ID client secret (use wrangler secret put ENTRA_ID_CLIENT_SECRET)
ENTRA_ID_CLIENT_SECRET=your_client_secret

# Short Domain (use wrangler secret put SHORT_DOMAIN)
SHORT_DOMAIN=https://aka.money

# Database
DATABASE_ID=your_d1_database_id

# Storage Configuration
# Options: "r2" (default) or "azure"
STORAGE_PROVIDER=r2

# Cloudflare R2 Storage (when STORAGE_PROVIDER=r2)
R2_BUCKET_NAME=akamoney-storage
R2_PUBLIC_URL=https://storage.aka.money

# Azure Blob Storage (when STORAGE_PROVIDER=azure)
# Use wrangler secret put for production secrets
AZURE_STORAGE_ACCOUNT=your_storage_account
AZURE_STORAGE_CONTAINER=your_container_name
AZURE_STORAGE_SAS_TOKEN=your_sas_token
AZURE_PUBLIC_URL=https://your-account.blob.core.windows.net/your-container

# CDN Configuration (optional)
# When set, CDN_URL overrides R2_PUBLIC_URL and AZURE_PUBLIC_URL
# This allows serving images through a CDN for cost savings
# CDN_URL=https://your-cdn.example.com
